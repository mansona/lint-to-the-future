<div class="lttf-chart" data-test-chart={{@rule}}>
  <div class="flex">
    <h2>{{this.ruleName}}</h2>
    {{#if this.shouldShowLink}}
      <LinkTo @route="rule" @model={{@rule}} data-test-view-files={{@rule}}>view files</LinkTo>
    {{/if}}
  </div>
  <div {{did-insert this.renderChart}}></div>
  <div class="stv-radio-buttons-wrapper">
  	<input
      type="radio"
      class="stv-radio-button"
      name="{{this.guid}}"
      value="1"
      id="{{this.guid}}-daily"
      checked={{eq this.timeSeries "daily"}}
      {{on "click" (fn this.selectTimeSeries "daily")}}
      data-test-time-button="daily"
    />
  	<label for="{{this.guid}}-daily">Daily</label>
  	<input
      type="radio"
      class="stv-radio-button"
      name="{{this.guid}}"
      value="2"
      id="{{this.guid}}-weekly"
      checked={{eq this.timeSeries "weekly"}}
      {{on "click" (fn this.selectTimeSeries "weekly")}}
      data-test-time-button="weekly"
    />
  	<label for="{{this.guid}}-weekly">Weekly</label>
    <input
      type="radio"
      class="stv-radio-button"
      name="{{this.guid}}"
      value="3"
      id="{{this.guid}}-monthly"
      checked={{eq this.timeSeries "monthly"}}
      {{on "click" (fn this.selectTimeSeries "monthly")}}
      data-test-time-button="monthly"
    />
  	<label for="{{this.guid}}-monthly">Monthly</label>
  </div>
</div>